<Window x:Class="JobSeeker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:JobSeeker.ViewModels"
        xmlns:local="clr-namespace:JobSeeker"
        mc:Ignorable="d"
        Title="EmploymentSystem" Height="450" Width="800" MinWidth="800" MinHeight="450">
    
    <Window.DataContext>
        <viewmodels:VMMainWindow/>
    </Window.DataContext>

    <Grid>
        <Frame Content="{Binding CurrentPage}" NavigationUIVisibility="Hidden"></Frame>
    </Grid>
    
</Window>
